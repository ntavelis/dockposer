{
    "name": "ntavelis/dockposer",
    "description": "Composer plugin that automatically generates and keeps in sync docker files with php extensions declared in composer.json.",
    "type": "composer-plugin",
    "license": "MIT",
    "authors": [
        {
            "name": "Athanasios Ntavelis",
            "email": "davelis89@gmail.com"
        }
    ],
    "require": {
        "php": "^7.2 | ^8.0",
        "composer-plugin-api": "^2.0"
    },
    "require-dev": {
        "composer/composer": "^2.0.0",
        "phpunit/phpunit": "^8.0",
        "squizlabs/php_codesniffer": "^3.5",
        "phpstan/phpstan": "^0.12.19"
    },
    "autoload": {
        "psr-4": {
            "Ntavelis\\Dockposer\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Ntavelis\\Dockposer\\Tests\\": "tests/"
        }
    },
    "extra": {
        "class": "Ntavelis\\Dockposer\\DockposerPlugin"
    }
}
